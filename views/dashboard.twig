{% include 'header.twig' %}
<div class="container-fluid debug">
    <div class="row">
        {% include 'dashboard/nav.twig' %}
        <main class="col-md-10">
            {% block content %}
                <div class="ui basic segment">
                    <h2 class="ui dividing header">
                        {{ page_title }}
                    </h2>
                    <div class="row">
                        <nav class="ui vertical pointing menu col-md-2" id="dashboard_nav">
                            <div class="row">
                                <a class="item" data-tab="opened">
                                    Abertos
                                    <div class="ui label">5</div>
                                </a>
                                <a class="item active" data-tab="inprogress">
                                    Em progresso
                                    <div class="ui label">2</div>
                                </a> 
                                <a class="item"> 
                                    Aguardando 
                                    <div class="ui label">--</div>
                                </a> 
                                <a class="item"> 
                                    Finalizados 
                                    <div class="ui label">13</div>
                                </a>
                            </div>
                        </nav>

                        <section class="col-md-10">
                            <div class="ui bottom attached  tab segment" data-tab="open" id="teste">
                                First
                            </div>
                            <div class="ui bottom attached tab segment" data-tab="inprogress">
                                Second
                            </div>
                            <div class="ui bottom attached tab segment" data-tab="closed">
                                Third
                            </div>
                        </section>
                    </div>
                </div>

                <div class="ui top attached tabular menu">
                    <a class="item active" data-tab="first">First</a>
                    <a class="item" data-tab="second">Second</a>
                    <a class="item" data-tab="third">Third</a>
                </div>
                <div class="ui bottom attached tab segment active" data-tab="first">
                    First
                </div>
                <div class="ui bottom attached tab segment" data-tab="second">
                    Second
                </div>
                <div class="ui bottom attached tab segment" data-tab="third">
                    Third
                </div>
            {% endblock %}
        </main>
    </div>
</div>
{% include 'footer.twig' %}